// .devcontainer/devcontainer.json
{
  "name": "Assessment Hybrid Dev",
  
  "dockerComposeFile": [
    "../docker-compose.yml" 
  ],
  
  // CRITICAL: Point to the 'workspace' service, not 'redis'
  "service": "workspace", 
  
  "workspaceFolder": "/workspaces",

  // REMOVE THE "features" SECTION ENTIRELY
  
  // Forward all necessary ports
  "forwardPorts": [6379, 5672, 15672], 

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}