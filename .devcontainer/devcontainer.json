// .devcontainer/devcontainer.json
{
  "name": "Assessment Hybrid Dev",
  
  "dockerComposeFile": [
    "../docker-compose.yml" 
  ],
  
  // CRITICAL: Point the development environment to the robust 'workspace' service
  "service": "workspace", 
  
  // This is the default location for the code inside the 'workspace' container
  "workspaceFolder": "/workspaces",

  // Forward the necessary infrastructure ports to your local machine (hybrid development)
  "forwardPorts": [
    6379,    // Redis
    5672,    // RabbitMQ AMQP
    15672    // RabbitMQ Admin UI
  ], 

  // Optional: VS Code extensions to install inside the Codespace for development
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode" // Example
      ]
    }
  }
}